@using ManagementApp.Entities.Concrete
@model List<Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12 grid-margin stretched-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Customers</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Customer Number</th>
                        <th>Membership Level</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.CustomerNumber</td>
                            <td>@item.MembershipLevel</td>
                            <td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Customer/EditCustomer/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Customer/AddCustomer/" class="btn btn-outline-info float-end">Add Customer</a>
        </div>
    </div>
</div>